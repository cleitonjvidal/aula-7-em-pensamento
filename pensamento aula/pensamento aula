for x in range(5):
    for y in range(5):
        if x + y == 4:
            print('* ', end=' ')
            
        else:
            print(' ', end=' ')
            
    print( )





'''6. Escreva um programa que solicita ao usuário um número inteiro
positivo e imprima a diagonal principal e secundária do quadrado gerado.

Exemplo: Usuário digita o número 5'''




for x in range(5):
    for y in range(5):
        if x + y == 4 or x ==y :
            print('*', end=' ')
            
        else:
            print(' ', end=' ')
            
    print( )












